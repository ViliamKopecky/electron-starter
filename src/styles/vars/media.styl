@require "sizes"

lt-xxxs = "(max-width:" + $xxxs + ")"
gt-xxxs = "(min-width:" + $xxxs + ")"

xxxs-xxs = "(min-width:" + $xxxs + ") and (max-width:" + $xxs + ")"
lt-xxs = "(max-width:" + $xxs + ")"
gt-xxs = "(min-width:" + $xxs + ")"

xxs-xs = "(min-width:" + $xxs + ") and (max-width:" + $xs + ")"
lt-xs = "(max-width:" + $xs + ")"
gt-xs = "(min-width:" + $xs + ")"

xs-s = "(min-width:" + $xs + ") and (max-width:" + $s + ")"
lt-s = "(max-width:" + $s + ")"
gt-s = "(min-width:" + $s + ")"

s-m = "(min-width:" + $s + ") and (max-width:" + $m + ")"
lt-m = "(max-width:" + $m + ")"
gt-m = "(min-width:" + $m + ")"

m-l = "(min-width:" + $m + ") and (max-width:" + $l + ")"
lt-l = "(max-width:" + $l + ")"
gt-l = "(min-width:" + $l + ")"

l-xl = "(min-width:" + $l + ") and (max-width:" + $xl + ")"
lt-xl = "(max-width:" + $xl + ")"
gt-xl = "(min-width:" + $xl + ")"

xl-xxl = "(min-width:" + $xl + ") and (max-width:" + $xxl + ")"
lt-xxl = "(max-width:" + $xxl + ")"
gt-xxl = "(min-width:" + $xxl + ")"

xxl-xxxl = "(min-width:" + $xxl + ") and (max-width:" + $xxxl + ")"
lt-xxxl = "(max-width:" + $xxxl + ")"
gt-xxxl = "(min-width:" + $xxxl + ")"

use-transition = gt-xs
has-retina = "(min-device-pixel-ratio: 2)"

landscape = "(orientation: landscape)"
portrait = "(orientation: portrait)"

show-full-menu = gt-m
hide-full-menu = lt-m

show-mq()
  &:after
    display block
    content ''

    position fixed
    bottom 1px
    left 0
    z-index 987654

    padding .3em .75em .4em .5em

    color #000

    font-size 9px
    font-weight bold
    font-family sans-serif

    border-bottom solid 2px rgba(#000, .5)
    border-top-right-radius 3px
    border-top-width 1px
    border-right-width 1px

    pointer-events none

    @media lt-xxs
      width $xxs
      content 'lt-xxs'

    @media xxs-xs
      width $xxs
      content 'xxs-xs'

    @media xs-s
      width $xs
      content 'xs-s'

    @media s-m
      width $s
      content 's-m'

    @media m-l
      width $m
      content 'm-l'

    @media l-xl
      width $l
      content 'l-xl'

    @media xl-xxl
      width $xl
      content 'xl-xxl'

    @media xxl-xxxl
      width $xxl
      content 'xxl-xxxl'

    @media gt-xxxl
      width $xxxl
      content 'gt-xxxl'
